@{
    Layout = "";
}

<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <title>Tourney Maker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <base href="/" />

    <meta name="description" content="" />
</head>
<body class="skin-blue" ng-controller="LandingPageController as lpc">

    <header class="main-header">
        <a href="#/dashboard" class="logo">TourneyMaker</a>
        <nav class="nav navbar navbar-static-top">

            <a href="" class="sidebar-toggle" data-toggle="offcanvas" role="button" ng-show="lpc.isLoggedIn">
                <span class="sr-only">Toggle Navigation</span>
            </a>

            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <li>
                        <a href=""><i class="fa fa-bell-o"></i></a>
                    </li>
                    <li>
                        <a href="" style="pointer-events:none">John Doe</a>
                    </li>
                    <li>
                        <a href="#/home" ng-click="lpc.isLoggedIn = false;">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <aside class="main-sidebar" ng-show="lpc.isLoggedIn" style="height:auto">
        <section class="sidebar">
            <ul class="sidebar-menu">
                <li class="header">Participant</li>
                <li ng-class="{'active' : lpc.$location.path() == '/dashboard/1/active-tournaments'}">
                    <a href="" ng-click="lpc.setActiveTourmaments()">Active Tournaments</a>
                </li>
                <li ng-class="{'active' : lpc.$location.path() == '/dashboard/1/completed-tournaments'}">
                    <a href="" ng-click="lpc.setCompletedTourmaments()">Completed Tournaments</a>
                </li>
                <li class="header">Profile</li>
                <li ng-class="{'active' : lpc.$location.path() == '/dashboard/1/profile'}">
                    <a href="" ng-click="lpc.setProfile()">View/Update Profile</a>
                </li>
                <li class="header">Management</li>
                <li ng-class="{'active' : lpc.$location.path() == '/dashboard/1/tournament-management'}">
                    <a href="" ng-click="lpc.setTournamentManagement()">Tournament Management</a>
                </li>
            </ul>
        </section>
    </aside>

    @* This is where our application lives *@
    <ng-view></ng-view>

</body>
</html>

